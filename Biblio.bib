  keywords  = {VEELS, monochromated STEM, band gap, Cu(InGa)Se2, chalcopyrite, solar cell},
  publisher = {Cambridge University Press},
  url       = {https://www.cambridge.org/core/article/local-band-gap-measurements-by-veels-of-thin-film-solar-cells/C3110D829DB09EDB01F582F6A7AC3CCC},
